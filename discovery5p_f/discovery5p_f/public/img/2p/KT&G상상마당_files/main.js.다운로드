$(document).ready(function(){/*var a=$(".main #header").offset();$(window).scroll(function(){$(document).scrollTop()>a.top?$(".main  #header").addClass("headfixed"):$(".main  #header").removeClass("headfixed")});*/var s=$("#introSlider");s.owlCarousel({loop:!0,items:1,nav:!0,lazyLoad:!0,autoplay:!0,autoplayTimeout:10000,autoplayHoverPause:0,dots:!0,dotsContainer:'.intro_wrap .owl-custom-dots'}),$(".sldbtn2.play").on("click",function(){s.trigger("play.owl.autoplay",[1e3]);$(this).addClass("active");$(".sldbtn2.stop").removeClass("active");}),$(".sldbtn2.stop").on("click",function(){s.trigger("stop.owl.autoplay");$(this).addClass("active");$(".sldbtn2.play").removeClass("active");}),s.on("changed.owl.carousel",function(){if($(".sldbtn2.stop").hasClass("active")){$(".sldbtn2.stop").removeClass("active");$(".sldbtn2.play").addClass("active");}}),$("#allMainPlaynow").owlCarousel({loop:!0,responsiveClass:!0,nav:!0,items:1,lazyLoad:!0,dots:!0,dotsContainer:'.playnow_sect .owl-custom-dots',responsive:{768:{items:3,margin:15},1200:{items:5,margin:20},1600:{items:7,margin:25,stagePadding:90}}}),$("#allMainVisonMission").owlCarousel({loop:1,responsiveClass:!0,nav:!0,dots:!1,responsive:{0:{items:1,margin:15,slideBy:1,stagePadding:60},460:{items:1,margin:15,slideBy:1,stagePadding:120},768:{items:3,margin:15,slideBy:3,stagePadding:60},960:{items:3,margin:15,slideBy:3,stagePadding:160},1200:{items:5,margin:20,slideBy: 5,stagePadding:0}}}),$("#allMainAreaInfo").owlCarousel({loop:!1,responsiveClass:!0,lazyLoad:!0,nav:!0,dots:!1,items:1,responsive:{768:{items:3,margin:15},1200:{items:5,margin:20,mouseDrag:!1,touchDrag:!1}}}),$("#allMainHistory").owlCarousel({loop:!1,responsiveClass:!0,nav:!0,items:1,lazyLoad:!0,responsive:{1500:{stagePadding:100},1600:{stagePadding:150},1800:{stagePadding:240}}}),$("#sliderMainMovie").owlCarousel({loop:!1,responsiveClass:!0,nav:!1,dots:!1,autoWidth:!0,responsive:{0:{items:2,margin:15,stagePadding:30},460:{items:2,margin:15,stagePadding:50},768:{items